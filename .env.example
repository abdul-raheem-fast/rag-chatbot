# ============================================
# RAG Chatbot - Environment Configuration
# Copy this file to .env and fill in values
# ============================================

# --- App ---
APP_NAME="RAG Chatbot"
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-64-char-string
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# --- Database ---
DATABASE_URL=postgresql+asyncpg://raguser:ragpass@localhost:5432/ragchatbot
DATABASE_URL_SYNC=postgresql://raguser:ragpass@localhost:5432/ragchatbot

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- ChromaDB ---
CHROMA_HOST=localhost
CHROMA_PORT=8100
CHROMA_COLLECTION=rag_documents

# --- LLM Providers (set at least one) ---
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AI...

# Default models per provider
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GOOGLE_MODEL=gemini-1.5-flash

# --- Embeddings ---
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# --- Retrieval ---
RETRIEVAL_TOP_K=20
RERANK_TOP_K=5
SIMILARITY_THRESHOLD=0.72
RERANK_THRESHOLD=0.25
MAX_CONTEXT_TOKENS=6000
CHUNK_SIZE=512
CHUNK_OVERLAP=64

# --- Auth ---
JWT_SECRET=change-me-to-another-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=30
DAILY_TOKEN_BUDGET=500000
MONTHLY_TOKEN_BUDGET=10000000

# --- Integrations (all optional) ---
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=...
GOOGLE_SHEETS_CREDENTIALS_JSON={}
GOOGLE_SHEETS_SPREADSHEET_ID=...
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=...
SMTP_PASSWORD=...
EMAIL_FROM=noreply@yourcompany.com
HUBSPOT_API_KEY=...
NOTION_API_TOKEN=secret_...

# --- Observability ---
LOG_LEVEL=INFO
LANGFUSE_PUBLIC_KEY=...
LANGFUSE_SECRET_KEY=...
LANGFUSE_HOST=https://cloud.langfuse.com
